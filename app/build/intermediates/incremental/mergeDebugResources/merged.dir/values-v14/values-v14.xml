<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.Solid.Fgtit" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_fgtit</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_fgtit</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_fgtit</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Fgtit</item>
    </style>
    <style name="ActionBar.Transparent.Fgtit" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_fgtit</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Fgtit</item>
    </style>
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    <style name="MenuTextStyle">
	   	<item name="android:textColor">@android:color/white</item>
	   	<item name="android:textSize">16sp</item>
	</style>
    <style name="Theme.Fgtit" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_fgtit</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Fgtit</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Fgtit</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Fgtit</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Fgtit</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Fgtit</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_fgtit</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_fgtit</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Fgtit</item>
        
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
		
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Fgtit.Widget</item>

    </style>
    <style name="Theme.Fgtit.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Fgtit</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Fgtit</item>
    </style>
</resources>