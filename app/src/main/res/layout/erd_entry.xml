<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/customlist"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_job"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:src="@drawable/view_details"/>

    <LinearLayout
        android:id="@+id/ll_job"
        android:layout_toRightOf="@+id/img_job"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_local_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_job_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/txt_supervisor_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/jbName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="Job Name"
            android:textColor="#000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_supervisor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="Supervisor"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/erd_job_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Code"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"></TextView>

</RelativeLayout>