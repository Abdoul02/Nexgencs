<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fgtit.fingermap.dryden.CheckList">

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/cb_dryden"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="(WHEN REQUIRED) I HAVE CHECKED THAT THE HOT BOX REMAINS SWITCHED ON AT ALL TIMES AND IS SET AT THE CORRECT TEMPERATURE WHEN RECEIVED FROM THE STORE. ENSURE HOTBOX IS KEPT AT THAT TEMPERATURE UNTIL THE END OF THE SHIFT OR COMPLETION OF THE JOB. HOTBOX LID TO REMAIN CLOSED AT ALL TIMES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="sign"
        android:drawableRight="@drawable/signature"
        android:text="RWC"
        android:textColor="@color/white"
        android:background="@drawable/btngrey"/>


</androidx.constraintlayout.widget.ConstraintLayout>
