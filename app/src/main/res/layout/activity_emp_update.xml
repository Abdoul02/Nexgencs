<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fgtit.fingermap.EmpUpdate">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtUPid"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/edtcustom"
        android:hint="ID Number"
        android:textColor="#000"
        android:singleLine="true" />

        <EditText
            android:id="@+id/edtUPname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:background="@drawable/edtcustom"
            android:hint="Name"
            android:textColor="#000"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp" >

        <EditText
            android:id="@+id/edtFinger1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Fingerprint 1"
            android:background="@drawable/edtcustom"
            android:editable="false"
            android:ems="10" />

        <ImageView
            android:id="@+id/imgFinger1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/fingerprint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp" >

        <EditText
            android:id="@+id/edtFinger2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Fingerprint 2"
            android:background="@drawable/edtcustom"
            android:editable="false"
            android:ems="10" />

        <ImageView
            android:id="@+id/imgFinger2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/fingerprint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/btncustom"
            android:textColor="#000"/>


        </LinearLayout>



</LinearLayout>
