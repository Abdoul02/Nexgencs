<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.fgtit.fingermap.Timesheet">

    <LinearLayout
        android:id="@+id/linearMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

                <EditText
                    android:id="@+id/edtCustomer"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:padding="8dp"
                    android:background="@drawable/custom_edt"
                    android:hint="Customer"
                    android:textColor="@color/black" >
                </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

            <EditText
                android:id="@+id/edtJob"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/custom_edt"
                android:hint="Job Number"
                android:textColor="@color/black" >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

            <EditText
                android:id="@+id/edtSN"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/custom_edt"
                android:hint="Serial Number"
                android:textColor="@color/black" >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

            <EditText
                android:id="@+id/edtHours"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/custom_edt"
                android:hint="Hours Worked"
                android:textColor="@color/black" >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

            <EditText
                android:id="@+id/edtIdnum"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/custom_edt"
                android:hint="ID Number"
                android:textColor="@color/black" >
            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

            <EditText
                android:id="@+id/edtPart"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:lines="6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/custom_edt"
                android:hint="Spare Part"
                android:textColor="@color/black" >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@drawable/left_divider" />

            <EditText
                android:id="@+id/edtDetail"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:lines="6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/custom_edt"
                android:hint="Details of work done"
                android:textColor="@color/black" >
            </EditText>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSignature"
            android:text="Signature"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btngrey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</ScrollView>
